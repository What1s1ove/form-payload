{
  "include": ["src/*"],
  "exclude": ["node_modules/*"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "isolatedModules": true,
    "lib": ["es2020", "DOM"],
    "module": "commonjs",
    "outDir": "build",
    "paths": {
      "~/*": ["src/*"]
    },
    "strict": true,
    "target": "ES6"
  }
}
